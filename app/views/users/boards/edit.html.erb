    <% @day_locations.each do |line| %>
      <tr>
        <th><%= line.first[0].strftime("%A") %></th>
        <% line.each do |day| %>
          <td class="<%= day[1] == 'available' ? 'success' : 'danger' %>">
            <%= day[0] %>
