        <% months = @day_locations.first.map{|x| x[0].strftime("%B")} %>
        <% months.group_by{|x| x}.map {|k, v| [k,v.size]}.each do |month| %>
          <th colspan="<%= month[1] %>"> <%= month[0] %></th>
